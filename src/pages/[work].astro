---
import Layout from "../layouts/Layout.astro"
import { works } from "../data/works"
import Background from "../components/app/utils/Background.astro"

const { work } = Astro.params

const info = works.find(w => w.id == work)

if (!info) {
    return Astro.redirect("/404")
}
---

<Layout title={`${info.name}`}>
    <section class="h-screen">
        <Background />
        <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
            <div class="hover:scale-105 inline-block transition-all hover:shadow-2xl mb-8 lg:mb-0 lg:mt-0 lg:col-span-5 lg:flex">
                <img 
                    src={info.image} 
                    alt={`Imagen del proyecto ${info.name}`}
                    class="shadow-2xl aspect-[191/96] h-full w-full object-cover object-center rounded-lg" 
                    style={`view-transition-name: work-${info.id};`} />
            </div>   
            <div class="ml-auto lg:ml-20 place-self-center lg:col-span-7">
                <span
                    class="bg-pink-100 text-pink-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-pink-900 dark:text-pink-300">
                    {info.category}
                </span>
                <h1 class="mt-4 max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white">
                    {info.name}
                </h1>
                <p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">
                    {info.description}
                </p>
                <div class="flex items-center">
                    <a
                        href="/"
                        class="z-10 mr-4 flex items-center justify-center px-5 py-2.5 text-sm font-medium rounded-lg border border-gray-800 text-black hover:bg-black hover:text-white dark:border-gray-100 dark:text-white dark:hover:bg-white dark:hover:text-black">
                        <i class="fa-solid fa-arrow-left mr-2"></i>
                        Volver
                    </a>
                    <a
                        href={info.url}
                        class="z-10 text-white sm:mt-0 bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800 flex items-center justify-center">
                        Ir al Sitio
                        <i class="fa-solid fa-arrow-up-right-from-square ml-2"></i>
                    </a>
                </div>
            </div>    
        </div>
    </section>
</Layout>
