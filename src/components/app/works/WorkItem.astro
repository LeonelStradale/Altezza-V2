---
export interface Props {
    id: string
    image: string
    category: string
    name: string
    description: string
    url: string
}

const {
    id,
    image,
    category,
    name,
    description,
    url
} = Astro.props
---

<div class="flex justify-center items-center mb-4">
    <div
        class="max-w-sm min-h-[400px] bg-white border border-gray-200 rounded-lg shadow-2xl dark:bg-gray-800 dark:border-gray-700">
        <a href={`/${id}`}
            class="hover:scale-110 inline-block transition-all duration-1000 hover:shadow-2xl">
            <img
                transition:name={`image-work-${id}`} 
                src={image} 
                alt={`Imagen del proyecto ${name}`}
                class="aspect-[191/96] h-full w-full object-cover object-center rounded-lg"
                />
        </a>
        <div class="p-5">
            <span
                class="bg-pink-100 text-pink-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-pink-900 dark:text-pink-300">
                {category}
            </span>
            <h5 class="m-3 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                {name}
            </h5>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                {description}
            </p>
            <a href={url} target="_blank"
                class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white rounded-lg bg-gradient-to-r to-emerald-600 from-sky-400 hover:opacity-90">
                Conocer m√°s
                <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                        stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                </svg>
            </a>
        </div>
    </div>
</div>

